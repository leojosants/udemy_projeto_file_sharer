<div class="mt-4">
	<% if (files && files.length > 0) { %>
	<ul class="divide-y divide-gray-200">
		<% files.forEach(file => { %>
		<li class="py-4">
			<div class="flex justify-between items-center">
				<span class="text-gray-700 font-bold"><%- file.nome %></span>
				<div>
					<a
						href="/<%= file.caminho %>"
						download="<%= file.nome %>"
						class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded mr-2"
						>Download</a
					>
				</div>
			</div>
			<p class="text-sm text-gray-600 mt-2"><%= file.descricao %></p>
			<p class="text-sm italic text-gray-600 mt-2"><%= file.User.nome %></p>
		</li>
		<% }); %>
	</ul>
	<% } else { %>
	<p class="text-gray-500">Nenhum arquivo encontrado!</p>
	<% } %>
</div>
